<div class="box">Welcome</div>

<h1 align="center" style="background-color: cadetblue">welcome</h1>
<div>
      <% if current_user %>
        Signed in as <strong><%= current_user.name %></strong>!
       <p> <%= link_to "Sign out", signout_path, id: "sign_out" %></p>
      <% else %>
 <p><%= link_to "Sign up ", "/user/new", id: "sign_up" %></p>
        <p><%= link_to "Sign in ", "/user/edit", id: "sign_in" %></p>
      <% end %>
    </div> <marquee> <input type="text" id="txtblinkingtext" value="Welcome"

            readonly="readonly" style="height: 40px; width: 400px; background-color:cyan; font-size:300%;

            color: purple; border: 10px none; text-align: center; "></marquee>
<script>
	setInterval(blinktext, 500);

        var txt = "";

        var count = 0;

        function blinktext() {

            var cntrl = document.getElementById("txtblinkingtext");

            if (count == 0)

                txt = cntrl.value;

            if (count % 2 == 0)

                cntrl.value = "";

            else

                cntrl.value = txt;

            count++;

        }
</script> <!DOCTYPE html>
<html>
<head>
<style>
.element1 {
  width: 100%;
  height: 100%;
  animation: pulse 5s infinite;
}

@keyframes pulse {
  5% {
    background-color: #001F3F;
  }
  100% {
    background-color: #FF4136;
  }
}

html,
body {
  height: 100%;
}
.element {
  height: 150px;
  width: 550px;
  margin: 0 auto;
  background-color: red;
  animation-name: stretch;
  animation-duration: 3.5s; 
  animation-timing-function: ease-out; 
  animation-delay: 0;
  animation-direction: alternate;
  animation-iteration-count: infinite;
  animation-fill-mode: none;
  animation-play-state: running;
}

@keyframes stretch {
  5% {
    transform: scale(.3);
    background-color: red;
    border-radius: 100%;
  }
  50% {
    background-color: orange;
  }
  100% {
    transform: scale(1.5);
    background-color: green;
  }
}

body,
html {
  height: 100%;
}

body {
  display: flex;
  align-items: center;
  justify-content: center;
}
body {
  color: #fff;
  font: 600 14px/24px "Open Sans", "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", Sans-Serif;
}
