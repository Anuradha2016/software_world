<fieldset  align="center" style="margin-left: 50px;margin-right: 50px;background-color: aliceblue">
	<u><h1 align="center" style="background-color: cadetblue">Sign In</h1></u>
<%= form_for :user, @user, :url => {:action=>'login_attempt'} do |f| %>
  <p>
    <%= f.label 'username or email:' %><br />
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label 'password:' %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Sign In' %>&nbsp;&nbsp;&nbsp;
    <%= f.submit 'Clear Form', :type => 'reset' %>
  </p>
<% end %>
</fieldset>
