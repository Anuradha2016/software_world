<%= form_for :login, @login, :url => {:action=>'create', :id => @login.id} do |f| %>
 
  <h1>New article</h1>
  
  <p>
    <%= f.label :tittle %><br>
    <%= f.text_field :tittle %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
<p><%= link_to 'Back', :action => "index"%></p>
<p><%= link_to 'login', :action => "log"%></p>